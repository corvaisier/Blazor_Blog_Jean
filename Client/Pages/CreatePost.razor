        <InputText id="title" @bind-Value="newBlogPost.Description" class="form-control"/>
    </div>
        <div class="form-group">
        <label for="content">Contenu</label>
        <InputTextArea id="content" @bind-Value="newBlogPost.Content" class="form-control"/>
